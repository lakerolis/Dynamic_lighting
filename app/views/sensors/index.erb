<div class ="sensors">
  <h1>Sensors</h1>
  <table class="defaultTable">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
    <% @sensors.each do |sensor| %>
        <tr>
          <td><%=sensor.name%></td>
          <td><%=sensor.description%></td>
          <td> <%= link_to 'Delete', 'sensors/delete/'+sensor.id.to_s, data: { confirm: 'Are you sure?' } %></td>
    <%end%>
    </tr>
  </table>
</div>
<%= link_to 'New sensor', 'sensors/new'%>